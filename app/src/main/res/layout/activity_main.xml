<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suraj.mycalculator3.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme">

        <Button
            android:id="@+id/button0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="0"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button0"
            android:text="."
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonMinus"
            android:layout_toEndOf="@+id/buttonDot"
            android:text="X"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/buttonBackspace"
            android:layout_toEndOf="@+id/button8"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button4"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/button0"
            android:layout_toEndOf="@+id/button7"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button1"
            android:text="4"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBaseline="@+id/button6"
            android:layout_alignBottom="@+id/button6"
            android:layout_toEndOf="@+id/button4"
            android:text="5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/button9"
            android:layout_toEndOf="@+id/button8"
            android:text="6"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/buttonMultiply"
            android:layout_alignParentBottom="true"
            android:text="="
            android:textSize="50dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonCLEAR"
            android:text="1"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonBrackets"
            android:layout_toEndOf="@+id/button1"
            android:text="2"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonBrackets"
            android:layout_toEndOf="@+id/button2"
            android:text="3"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_above="@+id/buttonMinus"
            android:layout_alignStart="@+id/buttonMinus"
            android:text="+"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_above="@+id/buttonEqual"
            android:layout_alignStart="@+id/buttonEqual"
            android:text="-"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_above="@+id/buttonPlus"
            android:layout_alignStart="@+id/buttonPlus"
            android:text="/"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonBrackets"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/buttonMultiply"
            android:layout_toEndOf="@+id/buttonCLEAR"
            android:text="( )"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_above="@+id/buttonDivide"
            android:layout_toEndOf="@+id/buttonBrackets"
            android:text="*"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonCLEAR"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/buttonBrackets"
            android:background="@color/colorAccent"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/darker_gray"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:text=""
            android:textSize="35dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="25dp" />


    </RelativeLayout>

</LinearLayout>
